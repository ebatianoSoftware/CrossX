<xs:schema attributeFormDefault="unqualified"
           targetNamespace="https://crossx.support/Schemas/CrossX.Framework"
           elementFormDefault="qualified"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:xx="https://crossx.support/Schemas/CrossX.Framework">
  
  <xs:simpleType name="CrossX.Framework.Color">
    <xs:union>
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:enumeration value="White" />
          <xs:enumeration value="Black" />
        </xs:restriction>
      </xs:simpleType>
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:pattern value="#[\dA-Fa-f]{6}([\dA-Fa-f][\dA-Fa-f])?"/>
        </xs:restriction>
      </xs:simpleType>
    </xs:union>
  </xs:simpleType>

  <xs:simpleType name="CrossX.Framework.Id">
    <xs:restriction base="xs:string">
      <xs:pattern value="[A-Za-z][A-Za-z0-9-_]*"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="CrossX.Framework.Thickness">
    <xs:restriction base="xs:string">
      <xs:pattern value="[-+]?[0-9]*\.?[0-9]+(px)?([+-][-+]?[0-9]*\.?[0-9]+(px)?)"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="CrossX.Framework.Alignment">
    <xs:restriction base="xs:string">
      <xs:enumeration value="Start" />
      <xs:enumeration value="Center" />
      <xs:enumeration value="End" />
      <xs:enumeration value="Stretch" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="CrossX.Framework.FontWeight">
    <xs:restriction base="xs:string">
      <xs:enumeration value="Thin" />
      <xs:enumeration value="ExtraLight" />
      <xs:enumeration value="Light" />
      <xs:enumeration value="Normal" />
      <xs:enumeration value="Medium" />
      <xs:enumeration value="SemiBold" />
      <xs:enumeration value="Bold" />
      <xs:enumeration value="ExtraBold" />
      <xs:enumeration value="Black" />
      <xs:enumeration value="ExtraBlack" />
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="Object"/>
  
  <xs:complexType name="CrossX.Framework.UI.View" abstract="true">
    <xs:complexContent>
      <xs:extension base="xx:Object">
        <xs:attribute type="xx:CrossX.Framework.Id" name="Id"/>
        <xs:attribute type="xx:CrossX.Framework.Alignment" name="HorizontalAlignment"/>
        <xs:attribute type="xx:CrossX.Framework.Alignment" name="VerticalAlignment"/>
        <xs:attribute type="xx:CrossX.Framework.Color" name="BackgroundColor"/>
        <xs:attribute type="xx:CrossX.Framework.Thickness" name="Margin"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="CrossX.Framework.UI.FrameLayout">
    <xs:complexContent>
      <xs:extension base="xx:CrossX.Framework.UI.View">
        <xs:sequence>
          <xs:any maxOccurs="unbounded" minOccurs="0"/>
        </xs:sequence>
        <xs:attribute type="xx:CrossX.Framework.Thickness" name="Margin"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:element name="FrameLayout">
    <xs:complexType>
      <xs:complexContent>
        <xs:extension base="xx:CrossX.Framework.UI.FrameLayout"/>
      </xs:complexContent>
    </xs:complexType>
  </xs:element>

  <xs:element name="Label">
    <xs:complexType>
      <xs:complexContent>
        <xs:extension base="xx:CrossX.Framework.UI.View">
          <xs:attribute type="xs:string" name="Text"/>
          <xs:attribute type="xs:string" name="FontFamily"/>
          <xs:attribute type="xs:double" name="FontSize"/>
          <xs:attribute type="xx:CrossX.Framework.Color" name="TextColor"/>
          <xs:attribute type="xx:CrossX.Framework.FontWeight" name="FontWeight"/>
          <xs:attribute type="xx:CrossX.Framework.Alignment" name="HorizontalTextAlignment"/>
          <xs:attribute type="xx:CrossX.Framework.Alignment" name="VerticalTextAlignment"/>
        </xs:extension>
      </xs:complexContent>
    </xs:complexType>
  </xs:element>
</xs:schema>
