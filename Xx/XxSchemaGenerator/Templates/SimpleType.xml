<xsd:simpleType name="{Name}">
  <xsd:union>
    <xsd:simpleType>
      <xsd:restriction base="xsd:string">
        {Enumerations}</xsd:restriction>
    </xsd:simpleType>
    <xsd:simpleType>
      <xsd:restriction base="xsd:string">
        <xsd:pattern value="{Patterns}"/>
      </xsd:restriction>
    </xsd:simpleType>
  </xsd:union>
</xsd:simpleType>