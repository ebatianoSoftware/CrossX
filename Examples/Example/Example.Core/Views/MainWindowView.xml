<g:Window
  xmlns="https://crossx.support/Schemas/CrossX.Framework.UI"
  xmlns:g="https://crossx.support/Schemas/CrossX.Framework.UI.Global"
  xmlns:ex="https://crossx.support/Schemas/CrossX.Example"
  Desktop.MinWidth="400px" Desktop.MinHeight="300px"
  Desktop.InitialWidth="1280px" Desktop.InitialHeight="720px"
  Desktop.StartMode="Normal"
  BackgroundColor="#101018"
  Title="CrossX Example Application">

  <FrameLayout BackgroundColor="{Theme BackgroundColor}" Margin="20">

    <ImageView Source="{Binding Image}"
               Stretch="UniformToFill"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

    <FrameLayout Height="100" VerticalAlignment="Center" BackgroundColor="#40000000">

      <Label ForegroundColor="Black" Text="{Binding Stopwatch}" Margin="4,4,-4,-4"
             HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Digital-7 Mono" FontSize="100"
             FontMeasure="Strict"/>

      <Label ForegroundColor="White" Text="{Binding Stopwatch}"
             HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Digital-7 Mono" FontSize="100"
             FontMeasure="Strict"/>
      
    </FrameLayout>
    
    <Button BackgroundColor="Transparent" ForegroundColor="#40f0f0f0"
            BackgroundColorOver="Black" ForegroundColorOver="White"
            BackgroundColorPushed="#d0000000" ForegroundColorPushed="#d0d0d0"
            BackgroundDrawable="{Resource DefaultButtonBackground}"
            FontFamily="Roboto" FontSize="30" FontMeasure="Strict" TextPadding="10"
            Width="Auto" Height="Auto" HorizontalAlignment="End" VerticalAlignment="End" Margin="30"
            Text="Switch"
            Command="{Binding TestCommand}"/>
  </FrameLayout>
</g:Window>

