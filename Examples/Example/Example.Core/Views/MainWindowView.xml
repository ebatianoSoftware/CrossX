<g:Window
  xmlns="https://crossx.support/Schemas/CrossX.Framework.UI"
  xmlns:g="https://crossx.support/Schemas/CrossX.Framework.UI.Global"
  xmlns:ex="https://crossx.support/Schemas/CrossX.Example"
  Desktop.MinWidth="400px" Desktop.MinHeight="300px"
  Desktop.InitialWidth="1280px" Desktop.InitialHeight="720px"
  Desktop.StartMode="Normal"
  Title="CrossX Example Application">

  <FrameLayout BackgroundColor="{Theme BackgroundColor}">
    
    <Label ForegroundColor="White" Text="{Binding Stopwatch}"
           HorizontalAlignment="Center" VerticalAlignment="End" FontFamily="Consolas" FontSize="30" Margin="20"
           FontMeasure="Strict"/>

    <Button BackgroundColor="#80404050" ForegroundColor="White"
            BackgroundColorOver="#606070" ForegroundColorOver="AntiqueWhite"
            BackgroundColorPushed="#404050" ForegroundColorPushed="AntiqueWhite"
            BackgroundDrawable="{Resource DefaultButtonBackground}"
            FontFamily="Roboto" FontSize="30" FontMeasure="Strict" TextPadding="10"
            Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Start" Margin="30"
            Text="Push ME!"
            Command="{Binding TestCommand}"/>

    <ImageView Source="{Binding ImageUrl}"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>
  
  </FrameLayout>
</g:Window>

