<g:Window
  xmlns="https://crossx.support/Schemas/CrossX.Framework.UI"
  xmlns:g="https://crossx.support/Schemas/CrossX.Framework.UI.Global"
  xmlns:ex="https://crossx.support/Schemas/CrossX.Example"
  Desktop.MinWidth="960" Desktop.MinHeight="540"
  Desktop.InitialWidth="1280" Desktop.InitialHeight="720"
  Desktop.StartMode="Normal"
  BackgroundColor="{Theme BackgroundColor}"
  Title="CrossX Example Application">

  <SplitLayout SplitPosition="25%" Orientation="Horizontal" SplitterSize="5"
               SplitterColor="{Theme ButtonBackgroundColor}"
               SplitterColorOver="{Theme ButtonBackgroundColorOver}" 
               SplitterColorPushed="{Theme ButtonBackgroundColorPushed}"
               SplitterDrawable="{Resource SplitterDrawable}"
               EnableManipulation="True">

    <FrameLayout BackgroundColor="#20000000"/>
    
    <FrameLayout Margin="20">
      
      <ImageView Source="{Binding Image}"
                 Stretch="UniformToFill"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="100"/>

      <FrameLayout BackgroundColor="Black" BackgroundDrawable="{Resource DefaultButtonBackground}" Opacity="{Binding SliderValue}"
                   Width="800" Height="280" HorizontalAlignment="Center" VerticalAlignment="Center"/>

      <Label ForegroundColor="Black" Text="{Binding Stopwatch}" Margin="4,4,-4,-4"
              HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Digital-7 Mono" FontSize="200"
              FontMeasure="Strict" TextPadding="40"/>

      <Label ForegroundColor="White" Text="{Binding Stopwatch}"
              HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Digital-7 Mono" FontSize="200"
              FontMeasure="Strict" TextPadding="40"/>

      <Button BackgroundColor="{Theme DefaultButtonBackgroundColor}" ForegroundColor="{Theme ButtonForegroundColor}"
              BackgroundColorOver="{Theme DefaultButtonBackgroundColorOver}" ForegroundColorOver="{Theme ButtonForegroundColorOver}"
              BackgroundColorPushed="{Theme DefaultButtonBackgroundColorPushed}" ForegroundColorPushed="{Theme ButtonForegroundColorPushed}"
              BackgroundDrawable="{Resource DefaultButtonBackground}"
              FontFamily="Segoe UI" FontSize="22" FontMeasure="Strict" TextPadding="20,10,20,10"
              Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="End" Margin="30"
              Text="Switch"
              Command="{Binding TestCommand}" Visible="{Binding ShowButton}"/>
    
      <ProgressBar BackgroundColor="#5B5B5B" ForegroundColor="#FB690E"
                   MaxValue="1" Value="{Binding Progress}"
                   Margin="46" HorizontalAlignment="Center" VerticalAlignment="End"
                   Width="100" Height="2" Mode="Query"
                   Visible="{Binding ShowProgress}"/>


      <Slider HorizontalAlignment="Center" VerticalAlignment="Start" Width="300" Height="20" TrackThickness="1"
              ThumbDrawable="{Resource SliderThumb}" Margin="30" Value="{Binding SliderValue}"
              MinValue="0" MaxValue="1"
              ValueResolution="0.1"
              ThumbColor="{Theme ThumbBackgroundColor}"
              ThumbColorOver="{Theme ThumbBackgroundColorOver}"
              ThumbColorPushed="{Theme ThumbBackgroundColorPushed}"
              TrackColor="{Theme TrackBackgroundColor}"
              TrackColorOver="{Theme TrackBackgroundColorOver}"
              TrackColorPushed="{Theme TrackBackgroundColorPushed}"/>

      <Slider HorizontalAlignment="Start" VerticalAlignment="Center" Width="20" Height="300" TrackThickness="1"
              ThumbDrawable="{Resource SliderThumb}" Margin="30"
              Value="{Binding SliderValue}"
              MinValue="0"
              MaxValue="1"
              ThumbColor="{Theme ThumbBackgroundColor}"
              ThumbColorOver="{Theme ThumbBackgroundColorOver}"
              ThumbColorPushed="{Theme ThumbBackgroundColorPushed}"
              TrackColor="{Theme TrackBackgroundColor}"
              TrackColorOver="{Theme TrackBackgroundColorOver}"
              TrackColorPushed="{Theme TrackBackgroundColorPushed}"/>

    <StackLayout Orientation="Vertical" Spacing="10" Padding="10" BackgroundColor="DarkRed" HorizontalAlignment="Center" Width="Auto" VerticalAlignment="Center" Visible="False">
      <Label Text="Test1" BackgroundColor="Green" TextPadding="10" FontSize="30" FontFamily="Segoe UI" HorizontalAlignment="Stretch"/>
      <Label Text="Test2" BackgroundColor="Green" TextPadding="10" FontSize="30" FontFamily="Segoe UI" HorizontalAlignment="Center"/>
      <Label Text="Test3 He" BackgroundColor="Green" TextPadding="10" FontSize="30" FontFamily="Segoe UI" HorizontalAlignment="Center"/>
      <StackLayout Orientation="Horizontal" Spacing="10" Padding="10" BackgroundColor="Navy" HorizontalAlignment="Center" Width="Auto" VerticalAlignment="Center">
        <Label Text="Test2" BackgroundColor="Green" TextPadding="10" FontSize="50" FontFamily="Segoe UI" VerticalAlignment="Center"/>
        <Label Text="Test4" BackgroundColor="Green" TextPadding="10" FontSize="30" FontFamily="Segoe UI" VerticalAlignment="End"/>
        <Label Text="Test5 Ho 33" BackgroundColor="Green" TextPadding="10" FontSize="30" FontFamily="Segoe UI" VerticalAlignment="Center"/>
        <Label Text="Test6" BackgroundColor="Green" TextPadding="10" FontSize="20" FontFamily="Segoe UI" VerticalAlignment="Center"/>
      </StackLayout>
      <Label Text="Test4" BackgroundColor="Green" TextPadding="10" FontSize="30" FontFamily="Segoe UI" HorizontalAlignment="End"/>
      <Label Text="Test5 Ho 33" BackgroundColor="Green" TextPadding="10" FontSize="30" FontFamily="Segoe UI" HorizontalAlignment="Center"/>

      <Button BackgroundColor="{Theme ButtonBackgroundColor}" ForegroundColor="{Theme ButtonForegroundColor}"
              BackgroundColorOver="{Theme ButtonBackgroundColorOver}" ForegroundColorOver="{Theme ButtonForegroundColorOver}"
              BackgroundColorPushed="{Theme ButtonBackgroundColorPushed}" ForegroundColorPushed="{Theme ButtonForegroundColorPushed}"
              BackgroundDrawable="{Resource ButtonBackground}"
              FontFamily="Segoe UI" FontSize="22" FontMeasure="Strict" TextPadding="20,10,20,10"
              Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="End" Margin="30"
              Text="Switch"
              Command="{Binding TestCommand}" Visible="{Binding ShowButton}"/>
      
      <Label Text="Test6" BackgroundColor="Green" TextPadding="10" FontSize="30" FontFamily="Segoe UI" HorizontalAlignment="Center"/>
    </StackLayout>

    

    </FrameLayout>
  </SplitLayout>
</g:Window>

